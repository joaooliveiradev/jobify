<%- include('header') %>

<h2>Editar Vaga :</h2>
<form method="POST">
    <label for="titulo">Título: </label>
    <input type="text" name="titulo" value="<%- vagas.titulo %>">
    <label for="descricao">Descrição: </label>
    <textarea name="descricao" cols="30" rows="2"><%- vagas.descricao %></textarea>
    <label for="Categoria"></label>
    <select name="categoria">
        <% categorias.forEach( categoria => { %>
            <option value="<%-categoria.id %>" <% if(categoria.id == vagas.categoria) { %> selected <% } %> > <%-categoria.categoria %></option>
        <% }) %>
    </select>

    <input type="submit" value="Salvar">
</form>

<%- include('footer') %>